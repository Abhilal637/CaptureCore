<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin – Product Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans text-gray-800">
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <%- include('../partial/admin/sidebar') %>

    <!-- Main Content -->
    <main class="flex-1 p-6">
      <!-- Header -->
      <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-semibold">PRODUCTS</h1>
        <a href="/admin/products/add" class="px-6 py-3 text-lg font-bold bg-green-600 text-white rounded shadow hover:bg-green-700 transition-all">+ Add Product</a>
      </div>

      <!-- Search and Filter Bar -->
        <form method="GET" action="/admin/products" class="mb-4 flex items-center gap-2 flex-wrap">
        <input
          type="text"
          name="search"
          placeholder="Search products..."
          value="<%= typeof search === 'string' ? search : '' %>"
          class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500"
        />
          <input
            type="text"
            name="brand"
            placeholder="Brand"
            value="<%= typeof brandFilter === 'string' ? brandFilter : '' %>"
            class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500"
          />
        
        <select name="category" class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500">
          <option value="">All Categories</option>
          <% (categories || []).forEach(cat => { %>
            <option value="<%= cat._id %>" <%= categoryFilter === cat._id.toString() ? 'selected' : '' %>>
              <% if (cat.parentCategory) { %>
                <%= cat.parentCategory.name %> > <%= cat.name %>
              <% } else { %>
                <%= cat.name %>
              <% } %>
            </option>
          <% }) %>
        </select>
        
        <button
          type="submit"
          class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition"
        >
          Filter
        </button>
          <% if ((search && search.length > 0) || categoryFilter || brandFilter) { %>
          <a href="/admin/products" class="bg-gray-300 text-gray-700 px-3 py-2 rounded hover:bg-gray-400 transition">Clear</a>
        <% } %>
      </form>

      <!-- Product Table -->
      <div class="bg-white rounded shadow overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead>
            <tr class="text-left text-xs uppercase text-gray-500 border-b bg-gray-50">
              <th class="p-3">Name</th>
              <th class="p-3">Brand</th>
              <th class="p-3">Category</th>
              <th class="p-3">Price</th>
              <th class="p-3">Stock</th>
              <th class="p-3">Images</th>
              <th class="p-3">Status</th>
              <th class="p-3">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (products && products.length) { %>
              <% products.forEach(product => { %>
                <tr class="border-b hover:bg-gray-50">
                  <td class="p-3"><%= product.name %></td>
                  <td class="p-3"><%= product.brand || '-' %></td>
                  <td class="p-3"><%= product.category ? product.category.name : 'N/A' %></td>
                  <td class="p-3">₹<%= product.price %></td>
                  <td class="p-3"><%= product.stock %></td>
                  <td class="p-3 flex gap-2">
                    <% if (product.images && product.images.length) { %>
                      <% product.images.slice(0, 2).forEach(img => { %>
                        <img src="<%= img %>" alt="Product Image" class="w-12 h-12 object-cover rounded border" onerror="this.src='/images/placeholder.jpg'" />
                      <% }) %>
                    <% } else { %>
                      <span class="text-gray-400 text-xs">No images</span>
                    <% } %>
                  </td>

                  <td class="p-3">
                    <form action="/admin/products/toggle-status/<%= product._id %>" method="POST">
                      <label class="inline-flex items-center cursor-pointer">
                        <input type="checkbox" class="sr-only peer" name="isActive" onchange="this.form.submit()" <%= product.isActive ? 'checked' : '' %> />
                        <div class="w-11 h-6 bg-gray-300 peer-checked:bg-green-500 rounded-full relative transition-all">
                          <div class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform peer-checked:translate-x-full"></div>
                        </div>
                        <span class="ml-2 text-xs text-gray-600"><%= product.isActive ? 'Active' : 'Inactive' %></span>
                      </label>
                    </form>
                  </td>

                  <td class="p-3 flex gap-2">
                    <a href="/admin/products/edit/<%= product._id %>" class="text-blue-500 hover:text-blue-700" title="Edit">
                      ✏️
                    </a>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr><td colspan="7" class="text-center p-4">No products found.</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if (totalPages && totalPages > 1) { %>
        <nav class="mt-4 flex justify-center items-center space-x-2 text-sm">
          <% if (currentPage > 1) { %>
            <a
              href="?search=<%= encodeURIComponent(search || '') %>&category=<%= encodeURIComponent(categoryFilter || '') %>&brand=<%= encodeURIComponent(brandFilter || '') %>&page=<%= currentPage - 1 %>"
              class="px-3 py-1 rounded border border-gray-300 hover:bg-gray-200"
            >&laquo; Prev</a>
          <% } else { %>
            <span class="px-3 py-1 rounded border border-gray-300 text-gray-400 cursor-not-allowed">&laquo; Prev</span>
          <% } %>

          <% for(let p = 1; p <= totalPages; p++) { %>
            <% if (p === currentPage) { %>
              <span class="px-3 py-1 rounded bg-green-600 text-white font-semibold"><%= p %></span>
            <% } else { %>
              <a
                href="?search=<%= encodeURIComponent(search || '') %>&category=<%= encodeURIComponent(categoryFilter || '') %>&brand=<%= encodeURIComponent(brandFilter || '') %>&page=<%= p %>"
                class="px-3 py-1 rounded border border-gray-300 hover:bg-gray-200"
              ><%= p %></a>
            <% } %>
          <% } %>

          <% if (currentPage < totalPages) { %>
            <a
              href="?search=<%= encodeURIComponent(search || '') %>&category=<%= encodeURIComponent(categoryFilter || '') %>&brand=<%= encodeURIComponent(brandFilter || '') %>&page=<%= currentPage + 1 %>"
              class="px-3 py-1 rounded border border-gray-300 hover:bg-gray-200"
            >Next &raquo;</a>
          <% } else { %>
            <span class="px-3 py-1 rounded border border-gray-300 text-gray-400 cursor-not-allowed">Next &raquo;</span>
          <% } %>
        </nav>
      <% } %>

    </main>
  </div>
</body>
</html>
