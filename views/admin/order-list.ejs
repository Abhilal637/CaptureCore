<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Orders | Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
  <meta http-equiv="Pragma" content="no-cache">
  <meta http-equiv="Expires" content="0">
</head>
<body class="bg-gray-100 text-gray-800 font-sans">
  <div class="flex min-h-screen">
    <%- include('../partial/admin/sidebar') %>

    <div class="flex-1 flex flex-col">
     
      <div class="p-8 flex-1">
        <div class="flex justify-between items-center mb-8">
          <h1 class="text-4xl font-black tracking-tight">ORDERS</h1>
          <button onclick="location.reload()" class="px-6 py-3 text-lg font-bold bg-emerald-600 text-white rounded-xl shadow-lg hover:bg-emerald-700 hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
            Refresh
          </button>
        </div>

        <!-- Search Form -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8 border border-slate-200">
          <form method="GET" action="/admin/orders" class="flex items-center gap-4 flex-wrap">
            <input 
              type="text" 
              name="search" 
              value="<%= typeof search !== 'undefined' ? search : '' %>" 
              placeholder="Search by Order ID or User" 
              class="w-full max-w-md border-2 border-slate-300 rounded-xl px-4 py-3 text-sm font-medium focus:outline-none focus:border-emerald-500 focus:ring-4 focus:ring-emerald-500/20 transition-all"
            />
            <div class="flex gap-3 items-end">
              <button type="submit" class="bg-emerald-600 text-white px-6 py-3 rounded-xl font-bold hover:bg-emerald-700 transform hover:-translate-y-0.5 transition-all duration-200 shadow-lg hover:shadow-xl">
                Search
              </button>
              <% if (search && search.length > 0) { %>
                <button type="button" id="clearSearchBtn" class="bg-slate-200 text-slate-700 px-6 py-3 rounded-xl font-bold hover:bg-slate-300 transition-all">
                  Clear
                </button>
              <% } %>
            </div>
          </form>
        </div>

        <!-- Sorting Options -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8 border border-slate-200">
          <div class="flex gap-3 items-center flex-wrap">
            <span class="text-sm font-bold text-slate-700">Sort by:</span>
            <a href="?<%= search ? 'search=' + encodeURIComponent(search) + '&' : '' %>sort=date&order=desc" 
               class="px-4 py-2 text-sm font-medium border-2 rounded-xl hover:bg-slate-50 transition-all <%= (!sort || sort === 'date') && (!order || order === 'desc') ? 'bg-emerald-100 border-emerald-500 text-emerald-700' : 'border-slate-300 text-slate-700' %>">
              Date (Newest)
            </a>
            <a href="?<%= search ? 'search=' + encodeURIComponent(search) + '&' : '' %>sort=date&order=asc" 
               class="px-4 py-2 text-sm font-medium border-2 rounded-xl hover:bg-slate-50 transition-all <%= sort === 'date' && order === 'asc' ? 'bg-emerald-100 border-emerald-500 text-emerald-700' : 'border-slate-300 text-slate-700' %>">
              Date (Oldest)
            </a>
            <a href="?<%= search ? 'search=' + encodeURIComponent(search) + '&' : '' %>sort=amount&order=desc" 
               class="px-4 py-2 text-sm font-medium border-2 rounded-xl hover:bg-slate-50 transition-all <%= sort === 'amount' && order === 'desc' ? 'bg-emerald-100 border-emerald-500 text-emerald-700' : 'border-slate-300 text-slate-700' %>">
              Amount (High to Low)
            </a>
            <a href="?<%= search ? 'search=' + encodeURIComponent(search) + '&' : '' %>sort=amount&order=asc" 
               class="px-4 py-2 text-sm font-medium border-2 rounded-xl hover:bg-slate-50 transition-all <%= sort === 'amount' && order === 'asc' ? 'bg-emerald-100 border-emerald-500 text-emerald-700' : 'border-slate-300 text-slate-700' %>">
              Amount (Low to High)
            </a>
            <a href="?<%= search ? 'search=' + encodeURIComponent(search) + '&' : '' %>sort=status" 
               class="px-4 py-2 text-sm font-medium border-2 rounded-xl hover:bg-slate-50 transition-all <%= sort === 'status' ? 'bg-emerald-100 border-emerald-500 text-emerald-700' : 'border-slate-300 text-slate-700' %>">
              Status
            </a>
          </div>
        </div>

        <% if (orders && orders.length > 0) { %>
          <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-slate-200">
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead>
                  <tr class="bg-slate-900 text-white">
                    <th class="text-left p-6 font-black text-sm uppercase tracking-wider">Order ID</th>
                    <th class="text-left p-6 font-black text-sm uppercase tracking-wider">User</th>
                    <th class="text-left p-6 font-black text-sm uppercase tracking-wider">Amount</th>
                    <th class="text-left p-6 font-black text-sm uppercase tracking-wider">Product Status</th>
                    <th class="text-left p-6 font-black text-sm uppercase tracking-wider">Payment Status</th>
                    <th class="text-left p-6 font-black text-sm uppercase tracking-wider">Date</th>
                    <th class="text-left p-6 font-black text-sm uppercase tracking-wider">Update</th>
                    <th class="text-left p-6 font-black text-sm uppercase tracking-wider">Actions</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-slate-200">
                <% orders.forEach(order => { %>
                  <tr>
                    <td class="px-6 py-4 text-sm text-blue-600 font-mono">#<%= order.orderId %></td>
                    <td class="px-6 py-4 text-sm"><%= order.user?.name || 'N/A' %></td>
                    <td class="px-6 py-4 text-sm">â‚¹<%= (order.total || order.totalAmount || 0).toFixed(2) %></td>
                    
                    <!-- Product Statuses -->
                    <td class="px-6 py-4 text-sm">
                      <div class="space-y-1">
                        <% if (order.items && order.items.length > 0) { %>
                          <% order.items.forEach((item, index) => { %>
                            <div class="flex items-center justify-between">
                              <span class="text-xs text-gray-600 truncate max-w-[120px]" title="<%= item.product?.name || 'Product' %>">
                                <%= item.product?.name || `Product ${index + 1}` %>:
                              </span>
                              <% if (item.status === 'Return Requested') { %>
                                <span class="px-2 py-1 bg-yellow-200 text-yellow-800 rounded-full text-xs ml-2">Return Requested</span>
                              <% } else if (item.status === 'Returned') { %>
                                <span class="px-2 py-1 bg-green-200 text-green-800 rounded-full text-xs ml-2">Returned</span>
                              <% } else if (item.status === 'Delivered') { %>
                                <span class="px-2 py-1 bg-blue-200 text-blue-800 rounded-full text-xs ml-2">Delivered</span>
                              <% } else if (item.status === 'Shipped') { %>
                                <span class="px-2 py-1 bg-purple-200 text-purple-800 rounded-full text-xs ml-2">Shipped</span>
                              <% } else if (item.status === 'Processing') { %>
                                <span class="px-2 py-1 bg-orange-200 text-orange-800 rounded-full text-xs ml-2">Processing</span>
                              <% } else if (item.status === 'Cancelled') { %> <!-- Added -->
                                <span class="px-2 py-1 bg-red-200 text-red-800 rounded-full text-xs ml-2">Cancelled</span>
                              <% } else { %>
                                <span class="px-2 py-1 bg-gray-200 text-gray-800 rounded-full text-xs ml-2"><%= item.status || order.status || 'Placed' %></span>
                              <% } %>
                            </div>
                          <% }) %>
                        <% } else { %>
                          <% if (order.status === 'Return Requested') { %>
                            <span class="px-2 py-1 bg-yellow-200 text-yellow-800 rounded-full text-xs">Return Requested</span>
                          <% } else if (order.status === 'Returned') { %>
                            <span class="px-2 py-1 bg-green-200 text-green-800 rounded-full text-xs">Returned</span>
                          <% } else if (order.status === 'Cancelled') { %> <!-- Added -->
                            <span class="px-2 py-1 bg-red-200 text-red-800 rounded-full text-xs">Cancelled</span>
                          <% } else { %>
                            <span class="px-2 py-1 bg-gray-200 text-gray-800 rounded-full text-xs"><%= order.status || 'Placed' %></span>
                          <% } %>
                        <% } %>
                      </div>
                    </td>

                    <td class="px-6 py-4 text-sm font-semibold">
                      <% if (order.paymentStatus === 'Paid') { %>
                        <span class="px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs">Paid</span>
                      <% } else if (order.paymentStatus === 'Pending') { %>
                        <span class="px-2 py-1 bg-yellow-100 text-yellow-700 rounded-full text-xs">Pending</span>
                      <% } else if (order.paymentStatus === 'Failed') { %>
                        <span class="px-2 py-1 bg-red-100 text-red-700 rounded-full text-xs">Failed</span>
                      <% } else { %>
                        <span class="px-2 py-1 bg-gray-100 text-gray-700 rounded-full text-xs"><%= order.paymentStatus %></span>
                      <% } %>
                    </td>
                    <td class="px-6 py-4 text-sm"><%= order.createdAt?.toLocaleDateString() || 'N/A' %></td>

                    <!-- Status Update -->
                    <td class="px-6 py-4">
                      <% const allowed = nextStatusMap[order.status] || []; %>
                      <% if (allowed.length > 0) { %>
                        <form method="POST" action="/admin/orders/<%= order._id %>/update-status" class="flex items-center status-update-form" novalidate>
                          <select name="status" class="border border-gray-300 rounded px-2 py-1 text-sm" required>
                            <option disabled selected value> -- Select Status -- </option>
                            <% allowed.forEach(status => { %>
                              <option value="<%= status %>"><%= status %></option>
                            <% }) %>
                          </select>
                          <button type="submit" class="ml-2 px-2 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700">Update</button>
                        </form>
                      <% } else { %>
                        <span class="text-gray-500 text-sm">No further updates</span>
                      <% } %>
                    </td>

                    <!-- Actions -->
                    <td class="px-6 py-4 text-sm">
                      <a href="/admin/orders/<%= order._id %>" class="text-blue-500 hover:underline">View</a>

                      <div class="mt-2 space-y-2">
                        <% if (order.items && order.items.length > 0) { %>
                          <% order.items.forEach((item, itemIndex) => { %>
                            <% if (item.status === 'Return Requested' && !item.returnVerified) { %>
                              <div class="flex flex-col">
                                <span class="text-xs text-gray-500 mb-1"><%= item.product?.name || `Product ${itemIndex + 1}` %></span>
                                <button 
                                  class="px-2 py-1 bg-green-600 text-white text-xs rounded hover:bg-green-700 approve-btn"
                                  data-order-id="<%= order._id %>"
                                  data-product-id="<%= item.product._id %>"
                                  data-item-index="<%= itemIndex %>"
                                >
                                  Approve Return & Refund
                                </button>
                              </div>
                            <% } else if (item.returnVerified) { %>
                              <div class="flex flex-col">
                                <span class="text-xs text-gray-500 mb-1"><%= item.product?.name || `Product ${itemIndex + 1}` %></span>
                                <div class="text-xs text-green-600 font-medium">Return Approved</div>
                              </div>
                            <% } %>
                          <% }) %>
                        <% } else { %>
                          <% if ((order.status === 'Return Requested' || order.status === 'Returned') && !order.returnVerified) { %>
                            <button 
                              class="px-2 py-1 bg-green-600 text-white text-xs rounded hover:bg-green-700 approve-btn"
                              data-order-id="<%= order._id %>"
                              data-product-id="<%= order.items && order.items[0] ? order.items[0].product._id : '' %>"
                            >
                              Approve Return & Refund
                            </button>
                          <% } else if (order.returnVerified) { %>
                            <div class="text-xs text-green-600 font-medium">Return Approved</div>
                          <% } %>
                        <% } %>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <div class="mt-6 flex justify-center space-x-1">
            <% for (let i = 1; i <= totalPages; i++) { %>
              <% if (i === currentPage) { %>
                <span class="px-3 py-1 bg-blue-600 text-white rounded text-sm"><%= i %></span>
              <% } else { %>
                <a href="?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" 
                  class="px-3 py-1 bg-white border border-gray-300 rounded text-sm hover:bg-gray-100">
                  <%= i %>
                </a>
              <% } %>
            <% } %>
          </div>
        <% } else { %>
          <p>No orders found.</p>
        <% } %>
      </div>
    </div>
  </div>

  <script>
    // Handle status update form submissions (validate selection and prevent empty submit)
    document.querySelectorAll('.status-update-form').forEach(form => {
      form.addEventListener('submit', function(e) {
        const selectEl = this.querySelector('select[name="status"]');
        const submitBtn = this.querySelector('button[type="submit"]');
        if (!selectEl || !selectEl.value) {
          e.preventDefault();
          Swal.fire({
            icon: 'error',
            title: 'Select a status',
            text: 'Please choose a valid next status before updating.',
            confirmButtonColor: '#d33'
          });
          return;
        }

        // Guard: disable double submit
        if (submitBtn) {
          submitBtn.textContent = 'Updating...';
          submitBtn.disabled = true;
          submitBtn.classList.add('opacity-50');
        }
      });
    });

    // Handle return approval buttons
    document.querySelectorAll('.approve-btn').forEach(button => {
      button.addEventListener('click', async () => {
        const orderId = button.dataset.orderId;
        const productId = button.dataset.productId;
        const itemIndex = button.dataset.itemIndex;

        try {
          const res = await fetch(`/admin/orders/${orderId}/items/${productId}/verify-return`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ itemIndex: itemIndex })
          });

          const data = await res.json();

          if (res.ok) {
            const parent = button.parentElement;
            button.remove();
            const msg = document.createElement('div');
            msg.className = 'text-xs text-green-600 font-medium';
            msg.innerText = 'Return Approved';
            parent.appendChild(msg);

            Swal.fire({
              icon: 'success',
              title: 'Success',
              text: data.message || 'Return approved and amount refunded.',
              confirmButtonColor: '#3085d6'
            });
          } else {
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: data.message || 'Something went wrong',
              confirmButtonColor: '#d33'
            });
          }
        } catch (err) {
          console.error('Error:', err);
          Swal.fire({ 
            icon: 'error',
            title: 'Error',
            text: 'An unexpected error occurred.',
            confirmButtonColor: '#d33'
          });
        }
      });
    });

    // Handle clear search button
    document.addEventListener('DOMContentLoaded', () => {
      const clearBtn = document.getElementById('clearSearchBtn');
      if (clearBtn) {
        clearBtn.addEventListener('click', () => {
          window.location.href = '/admin/orders';
        });
      }

      // Add success message if redirected from status update
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get('statusUpdated') === 'true') {
        Swal.fire({
          icon: 'success',
          title: 'Status Updated',
          text: 'Order status has been updated successfully!',
          confirmButtonColor: '#3085d6',
          timer: 2000,
          showConfirmButton: false
        });
      }
    });
  </script>
</body>
</html>
