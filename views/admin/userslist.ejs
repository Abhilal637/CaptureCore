<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin â€“ User Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap');
    body { font-family: 'Inter', sans-serif; }
  </style>
</head>
<body class="bg-slate-50 font-sans text-slate-900">
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <%- include('../partial/admin/sidebar') %>
    <!-- Main Content -->
    <main class="flex-1 p-8">
      <!-- Header -->
      <div class="flex justify-between items-center mb-8">
        <div>
          <h1 class="text-4xl font-black text-slate-900 tracking-tight">USERS</h1>
          <p class="text-slate-600 font-medium mt-2">Manage customer accounts and permissions</p>
        </div>
        <form method="get" action="/admin/users" class="flex items-center gap-3">
          <input type="text" name="search" value="<%= search || '' %>" placeholder="Search users..." 
                 class="border-2 border-slate-300 rounded-xl px-4 py-3 font-medium focus:outline-none focus:border-emerald-500 focus:ring-4 focus:ring-emerald-500/20 transition-all" />
          <% if (search) { %>
            <button type="button" onclick="clearSearch()" class="bg-slate-200 text-slate-700 px-4 py-3 rounded-xl font-bold hover:bg-slate-300 transition-all">Clear</button>
          <% } %>
          <button type="submit" class="bg-emerald-600 text-white px-6 py-3 rounded-xl font-bold hover:bg-emerald-700 transform hover:-translate-y-0.5 transition-all duration-200 shadow-lg hover:shadow-xl">Search</button>
        </form>
      </div>

      <!-- User Table -->
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-slate-200">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="bg-slate-900 text-white">
                <th class="text-left p-6 font-black text-sm uppercase tracking-wider">
                  <input type="checkbox" id="selectAllUsers" class="w-4 h-4 text-emerald-600 bg-slate-900 border-slate-300 rounded focus:ring-emerald-500 focus:ring-2" />
                </th>
                <th class="text-left p-6 font-black text-sm uppercase tracking-wider">Name</th>
                <th class="text-left p-6 font-black text-sm uppercase tracking-wider">Email</th>
                <th class="text-left p-6 font-black text-sm uppercase tracking-wider">Mobile</th>
                <th class="text-left p-6 font-black text-sm uppercase tracking-wider">Status</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-200">
            <% if (users && users.length) { %>
              <% users.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)); %>
              <% users.forEach(user => { %>
                <tr class="hover:bg-slate-50 transition-colors">
                  <td class="p-6">
                    <input type="checkbox" class="user-checkbox w-4 h-4 text-emerald-600 bg-slate-50 border-slate-300 rounded focus:ring-emerald-500 focus:ring-2" />
                  </td>
                  <td class="p-6 text-sm font-medium text-slate-900"><%= user.name %></td>
                  <td class="p-6 text-sm text-slate-700"><%= user.email %></td>
                  <td class="p-6 text-sm text-slate-700"><%= user.mobile %></td>
                  <td class="p-6 text-sm">
                    <div class="flex items-center gap-3">
                      <label class="inline-flex items-center cursor-pointer">
                        <input type="checkbox" class="sr-only toggle-user-status" data-id="<%= user._id %>" <%= user.isBlocked ? '' : 'checked' %> />
                        <div class="w-11 h-6 bg-slate-300 rounded-full shadow-inner relative transition-colors">
                          <div class="<%= 'dot absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform duration-300 shadow-sm ' + (user.isBlocked ? '' : 'translate-x-5') %>"></div>
                        </div>
                      </label>
                      <span class="text-sm font-bold <%= user.isBlocked ? 'text-red-600' : 'text-emerald-600' %>">
                        <%= user.isBlocked ? 'Blocked' : 'Active' %>
                      </span>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr><td colspan="6" class="text-center p-4">No users found.</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="flex justify-between items-center mt-6">
        <form method="get" action="/admin/users" class="flex items-center space-x-2">
          <input type="hidden" name="search" value="<%= search || '' %>" />
          <button type="submit" name="page" value="<%= currentPage - 1 %>" class="px-4 py-2 text-sm bg-white rounded shadow hover:bg-gray-50" <%= currentPage === 1 ? 'disabled' : '' %>>Previous</button>
        </form>
        <span class="text-sm text-gray-600">Page <%= currentPage %> of <%= totalPages %></span>
        <form method="get" action="/admin/users" class="flex items-center space-x-2">
          <input type="hidden" name="search" value="<%= search || '' %>" />
          <button type="submit" name="page" value="<%= currentPage + 1 %>" class="px-4 py-2 text-sm bg-white rounded shadow hover:bg-gray-50" <%= currentPage === totalPages ? 'disabled' : '' %>>Next</button>
        </form>
      </div>
    </main>
  </div>

  <script>
    function clearSearch() {
      window.location = '/admin/users';
    }

    document.addEventListener('DOMContentLoaded', function () {
      const toggles = document.querySelectorAll('.toggle-user-status');

      toggles.forEach(toggle => {
        toggle.addEventListener('change', async function (e) {
          const userId = this.getAttribute('data-id');
          const willBlock = !this.checked;

          // Confirm action
          const resultSwal = await Swal.fire({
            title: willBlock ? 'Block this user?' : 'Unblock this user?',
            text: willBlock ? 'The user will not be able to login.' : 'The user will be able to login.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: willBlock ? 'Yes, block' : 'Yes, unblock',
            cancelButtonText: 'Cancel'
          });

          if (!resultSwal.isConfirmed) {
            // revert toggle
            this.checked = !this.checked;
            return;
          }

          const result = await fetch(`/admin/users/toggle-block/${userId}`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ isBlocked: willBlock })
          });

          if (result.ok) {
            Swal.fire({
              title: 'Updated!',
              icon: 'success',
              timer: 900,
              showConfirmButton: false
            });
            setTimeout(() => location.reload(), 850);
          } else {
            Swal.fire({
              title: 'Error!',
              icon: 'error',
              text: 'Could not update user status.',
              timer: 1500,
              showConfirmButton: false
            });
            this.checked = !willBlock; // revert
          }
        });
      });

      const selectAll = document.getElementById('selectAllUsers');
      if (selectAll) {
        selectAll.addEventListener('change', function () {
          const checkboxes = document.querySelectorAll('.user-checkbox');
          checkboxes.forEach(cb => { cb.checked = selectAll.checked; });
        });
      }
    });
  </script>
</body>
</html>
