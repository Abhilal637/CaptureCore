<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin â€“ User Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    // Block/Unblock confirmation and AJAX
    async function handleBlock(userId, action) {
      const confirmMsg = action === 'block' ? 'Block this user?' : 'Unblock this user?';
      const confirmBtn = action === 'block' ? 'Yes, block' : 'Yes, unblock';
      const result = await Swal.fire({
        title: confirmMsg,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: confirmBtn,
        cancelButtonText: 'Cancel',
        reverseButtons: true
      });
      if (!result.isConfirmed) return;
      const res = await fetch(`/admin/users/${userId}/${action}`, { method: 'POST' });
      if (res.ok) {
        Swal.fire({
          title: 'Success!',
          text: `User ${action === 'block' ? 'blocked' : 'unblocked'} successfully.`,
          icon: 'success',
          timer: 1200,
          showConfirmButton: false
        });
        // Update the row instantly
        const row = document.querySelector(`button[onclick*="handleBlock('${userId}'"]`).closest('tr');
        if (row) {
          const statusCell = row.querySelector('td:nth-child(7)');
          const actionsCell = row.querySelector('td:nth-child(8)');
          if (action === 'block') {
            statusCell.innerHTML = '<span class="text-red-600 font-semibold">Blocked</span>';
            actionsCell.innerHTML = `<button onclick="handleBlock('${userId}', 'unblock')" class="bg-green-600 text-white px-3 py-1 text-xs rounded mr-2 hover:bg-green-700">Unblock</button>`;
          } else {
            statusCell.innerHTML = '<span class="text-green-600 font-semibold">Active</span>';
            actionsCell.innerHTML = `<button onclick="handleBlock('${userId}', 'block')" class="bg-red-600 text-white px-3 py-1 text-xs rounded hover:bg-red-700">Block</button>`;
          }
        }
      } else {
        Swal.fire({
          title: 'Error!',
          text: 'Action failed!',
          icon: 'error',
          timer: 1500,
          showConfirmButton: false
        });
      }
    }
    function clearSearch() {
      window.location = '/admin/users';
    }
     document.addEventListener('DOMContentLoaded', function() {
    const selectAll = document.getElementById('selectAllUsers');
    if (selectAll) {
      selectAll.addEventListener('change', function() {
        const checkboxes = document.querySelectorAll('.user-checkbox');
        checkboxes.forEach(cb => { cb.checked = selectAll.checked; });
      });
    }
  });
  </script>
 
</head>
<body class="bg-gray-100 font-sans text-gray-800">
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <%- include('../partial/admin/sidebar') %>
    <!-- Main Content -->
    <main class="flex-1 p-6">
      <!-- Header -->
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-semibold">USER</h1>
        <form method="get" action="/admin/users" class="flex items-center space-x-2">
          <input
            type="text"
            name="search"
            value="<%= search || '' %>"
            placeholder="Search"
            class="border rounded px-4 py-2 text-sm"
          />
          <% if (search) { %>
            <button type="button" onclick="clearSearch()" class="px-2 py-1 text-xs bg-gray-200 rounded">Clear</button>
          <% } %>
          <button type="submit" class="px-2 py-1 text-xs bg-blue-600 text-white rounded">Search</button>
        </form>
      </div>
      <!-- User Table -->
      <div class="bg-white rounded shadow overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead>
            <tr class="text-left text-xs uppercase text-gray-500 border-b bg-gray-50">
              <th class="p-3"><input type="checkbox" id="selectAllUsers" /></th>
              <th class="p-3">Id</th>
              <th class="p-3">Name</th>
              <th class="p-3">Email</th>
              <th class="p-3">Mobile</th>
              <th class="p-3">Address</th>
              <th class="p-3">Status</th>
              <th class="p-3">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (users && users.length) { %>
              <% users.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)); %>
              <% users.forEach(user => { %>
                <tr class="border-b hover:bg-gray-50">
                  <td class="p-3"><input type="checkbox" class="user-checkbox" /></td>
                  <td class="p-3"><%= user._id %></td>
                  <td class="p-3"><%= user.name %></td>
                  <td class="p-3"><%= user.email %></td>
                  <td class="p-3"><%= user.mobile %></td>
                  <td class="p-3"><%= user.address %></td>
                  <td class="p-3">
                    <% if (user.blocked) { %>
                      <span class="text-red-600 font-semibold">Blocked</span>
                    <% } else { %>
                      <span class="text-green-600 font-semibold">Active</span>
                    <% } %>
                  </td>
                  <td class="p-3">
                    <% if (user.blocked) { %>
                     <button onclick="handleBlock('<%= user._id %>', 'unblock')" class="bg-[#34a853] text-white px-3 py-1 text-xs rounded mr-2 hover:bg-green-700">Unblock</button>

                    <% } else { %>
                     <button onclick="handleBlock('<%= user._id %>', 'block')" class="bg-[#1a73e8] text-white px-3 py-1 text-xs rounded hover:bg-blue-700">Block</button>

                    <% } %>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr><td colspan="8" class="text-center p-4">No users found.</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <!-- Pagination -->
      <div class="flex justify-between items-center mt-6">
        <form method="get" action="/admin/users" class="flex items-center space-x-2">
          <input type="hidden" name="search" value="<%= search || '' %>" />
          <button type="submit" name="page" value="<%= currentPage - 1 %>" class="px-4 py-2 text-sm bg-white rounded shadow hover:bg-gray-50" <%= currentPage === 1 ? 'disabled' : '' %>>Previous</button>
        </form>
        <span class="text-sm text-gray-600">Page <%= currentPage %> of <%= totalPages %></span>
        <form method="get" action="/admin/users" class="flex items-center space-x-2">
          <input type="hidden" name="search" value="<%= search || '' %>" />
          <button type="submit" name="page" value="<%= currentPage + 1 %>" class="px-4 py-2 text-sm bg-white rounded shadow hover:bg-gray-50" <%= currentPage === totalPages ? 'disabled' : '' %>>Next</button>
        </form>
      </div>
    </main>
  </div>
</body>
</html> 