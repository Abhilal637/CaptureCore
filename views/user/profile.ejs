<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Profile | CaptureCore</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="stylesheet" href="/css/user/styles.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Classic minimal card style */
    .info-card {
      background: white;
      border-radius: 0.5rem; /* rounded-lg */
      box-shadow: 0 1px 4px rgba(0,0,0,0.08);
      padding: 1.5rem;
      transition: box-shadow 0.3s ease, transform 0.3s ease;
      border-left: 4px solid transparent;
    }

    .info-card:hover {
      box-shadow: 0 6px 15px rgba(0,0,0,0.1);
      transform: translateY(-2px);
      border-left-color: #4A5568; /* subtle gray */
    }

    /* Sidebar links */
    .sidebar-link {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      font-weight: 500;
      color: #4A5568; /* cool gray */
      transition: background-color 0.3s ease, padding-left 0.3s ease;
      text-decoration: none;
    }

    .sidebar-link:hover {
      background-color: #E2E8F0; /* light gray */
      padding-left: 1.25rem;
    }

    .sidebar-link.active {
      background-color: #A0AEC0; /* medium gray */
      color: white;
      padding-left: 1.25rem;
    }

    /* Profile Avatar container */
    .profile-avatar {
      border-radius: 50%;
      padding: 0.25rem;
      background: #F7FAFC; /* very light gray */
      width: 8rem;
      height: 8rem;
      overflow: hidden;
      box-shadow: 0 0 8px rgba(0,0,0,0.05);
      margin-bottom: 1rem;
    }

    /* Profile avatar image */
    .profile-avatar img {
      border-radius: 50%;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    /* Buttons */
    a.bg-blue-600 {
      background-color: #2B6CB0; /* classic blue */
      border-radius: 0.5rem;
      padding: 0.5rem 1.5rem;
      font-weight: 600;
      color: white;
      transition: background-color 0.3s ease, transform 0.2s ease;
      display: inline-block;
      text-align: center;
    }

    a.bg-blue-600:hover {
      background-color: #2C5282;
      transform: scale(1.05);
    }

    a.bg-gray-100 {
      background-color: #F7FAFC;
      border-radius: 0.5rem;
      padding: 0.5rem 1.5rem;
      font-weight: 500;
      color: #4A5568;
      transition: background-color 0.3s ease;
      display: inline-block;
      text-align: center;
    }

    a.bg-gray-100:hover {
      background-color: #E2E8F0;
    }

    /* Success alert */
    .success-alert {
      background: #EDF7ED; /* very subtle green */
      border-left: 4px solid #38A169;
      padding: 1rem 1.5rem;
      border-radius: 0.5rem;
      font-weight: 600;
      color: #276749;
      box-shadow: 0 2px 10px rgba(56,161,105,0.15);
      animation: slideInDown 0.4s ease forwards;
      margin-bottom: 1.5rem;
    }

    /* Smooth transition for alerts */
    @keyframes slideInDown {
      from { transform: translateY(-20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
  </style>
</head>
<body class="bg-gray-50 font-sans">

  <!-- Navigation Bar -->
  <nav class="sticky top-0 z-50 bg-white shadow-sm border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
        
        <!-- Logo (clickable) -->
        <a href="/" class="text-xl font-bold text-gray-800 tracking-tight">CaptureCore</a>
    
        <!-- Nav Links -->
        <div class="hidden md:flex space-x-8">
            <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors duration-200 font-medium">Home</a>
            <a href="/shop" class="text-gray-600 hover:text-gray-900 transition-colors duration-200 font-medium">Shop</a>
            <a href="/about" class="text-gray-600 hover:text-gray-900 transition-colors duration-200 font-medium">About</a>
            <a href="/contact" class="text-gray-600 hover:text-gray-900 transition-colors duration-200 font-medium">Contact</a>
        </div>
    
        <!-- Icons with proper routes -->
        <div class="flex items-center space-x-4">
            <input id="searchInput" type="text" placeholder="Search products..." class="w-40 h-9 rounded-full border border-gray-200 px-4 bg-white shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-200 focus:border-transparent transition-all duration-200 hidden text-sm">
            <a href="#" id="searchToggle" class="text-gray-600 hover:text-gray-900 transition-colors duration-200 p-2 rounded-full hover:bg-gray-100">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </a>
            
            <!-- User Profile Dropdown -->
            <div class="relative">
              <button id="profileToggle" class="text-gray-600 hover:text-gray-900 transition-colors duration-200 p-2 rounded-full hover:bg-gray-100 focus:outline-none">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </button>
              <div id="profileDropdown" class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 z-50 hidden border border-gray-100">
                <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors">Profile</a>
                <a href="/orders" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors">My Orders</a>
                <a href="/wishlist" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors">Wishlist</a>
                <a href="/addresses" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors">Addresses</a>
                <div class="border-t border-gray-100 my-1"></div>
                <form action="/logout" method="POST" class="block">
                  <button type="submit" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors">Logout</button>
                </form>
              </div>
            </div>
            
            <a href="/cart" class="text-gray-600 hover:text-gray-900 transition-colors duration-200 p-2 rounded-full hover:bg-gray-100 relative">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.293 2.293A1 1 0 007 16h2m0 0a2 2 0 104 0m-4 0a2 2 0 104 0"></path>
              </svg>
              <span id="cartCount" class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center hidden">0</span>
            </a>
            <a href="/wishlist" class="text-gray-600 hover:text-gray-900 transition-colors duration-200 p-2 rounded-full hover:bg-gray-100 relative">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              <span id="wishlistCount" class="absolute -top-1 -right-1 bg-pink-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center hidden">0</span>
            </a>
        </div>
    
        <!-- Hamburger (mobile) -->
        <div class="md:hidden text-gray-600 cursor-pointer p-2" id="mobileMenuToggle">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 py-8 flex gap-8">
    <!-- Sidebar -->
    <aside class="w-64 flex-shrink-0">
        <div class="bg-white rounded-lg p-6 shadow-sm sticky top-24">
            <h2 class="text-2xl font-semibold text-gray-800 mb-8 pb-4 border-b border-gray-100">My Account</h2>
            <ul class="space-y-2">
                <li>
                    <a href="/profile" class="sidebar-link active">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span>Profile</span>
                    </a>
                </li>
                <li>
                    <a href="/edit-profile" class="sidebar-link">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        <span>Edit Profile</span>
                    </a>
                </li>
                <li>
                    <a href="/change-password" class="sidebar-link">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                        <span>Change Password</span>
                    </a>
                </li>
                
                <li>
                    <a href="/orders" class="sidebar-link">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                        </svg>
                        <span>My Orders</span>
                    </a>
                </li>
                <li>
                    <a href="/addresses" class="sidebar-link">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <span>Manage Address</span>
                    </a>
                </li>
                <li>
                    <a href="/wallet" class="sidebar-link">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V9a2 2 0 00-2-2H9a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-1"></path>
                        </svg>
                        <span>My Wallet</span>
                    </a>
                </li>
            </ul>
            
            <div class="mt-8 pt-6 border-t border-gray-100">
                <form action="/logout" method="POST">
                    <button type="submit" class="w-full bg-gray-800 text-white px-6 py-3 rounded-lg text-sm font-medium hover:bg-gray-700 transition-all duration-200 transform hover:scale-105">
                        Sign Out
                    </button>
                </form>
            </div>
        </div>
    </aside>

    <!-- Profile Content -->
    <main class="flex-1">
      <!-- Success Alert -->
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="success-alert flex items-center space-x-2 mb-8">
          <svg class="w-6 h-6 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
          </svg>
          <p>
            <% if (success === 'password_changed') { %>
              Password updated successfully!
            <% } else if (success === 'profile_updated') { %>
              Profile updated successfully!
            <% } else if (success === 'email_updated') { %>
              Email updated successfully!
            <% } else { %>
              <%= success %>
            <% } %>
          </p>
        </div>
      <% } %>

      <!-- Profile Picture Section -->
      <section class="mb-10 flex flex-col items-center">
        <div class="relative profile-avatar">
          <% const avatarSrc = (user && user.profilePicture) ? ('/uploads/' + user.profilePicture + '?t=' + Date.now()) : '/images/default-avatar.png'; %>
          <img src="<%= avatarSrc %>" alt="Profile Picture" />
          <button onclick="window.location.href='/edit-profile'" class="absolute bottom-1 right-1 bg-white rounded-full p-2 shadow hover:shadow-md" title="Edit profile picture">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-700" viewBox="0 0 20 20" fill="currentColor">
              <path d="M17.414 2.586a2 2 0 010 2.828l-8.5 8.5a1 1 0 01-.293.2l-3 1a1 1 0 01-1.266-1.266l1-3a1 1 0 01.2-.293l8.5-8.5a2 2 0 012.828 0z" />
              <path fill-rule="evenodd" d="M2 13.5A1.5 1.5 0 003.5 15h3a.5.5 0 000-1h-3a.5.5 0 01-.5-.5v-3a.5.5 0 00-1 0v3z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </section>

      <!-- Profile Information Cards -->
      <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="info-card">
          <div class="flex items-start space-x-4">
            <div class="bg-gray-100 p-3 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-800 mb-1">Full Name</h3>
              <p class="text-gray-600">
                <%= (typeof user !== 'undefined' && user?.name) ? user.name : 'Not provided' %>
              </p>
            </div>
          </div>
        </div>

        <div class="info-card">
          <div class="flex items-start space-x-4">
            <div class="bg-gray-100 p-3 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-800 mb-1">Email Address</h3>
              <p class="text-gray-600">
                <%= (typeof user !== 'undefined' && user?.email) ? user.email : 'Not provided' %>
              </p>
            </div>
          </div>
        </div>

        <div class="info-card">
          <div class="flex items-start space-x-4">
            <div class="bg-gray-100 p-3 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-800 mb-1">Phone Number</h3>
              <p class="text-gray-600">
                <%= (typeof user !== 'undefined' && (user?.phone || user?.mobile)) ? (user.phone || user.mobile) : 'Not provided' %>
              </p>
            </div>
          </div>
        </div>

        <div class="info-card">
          <div class="flex items-start space-x-4">
            <div class="bg-gray-100 p-3 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a4 4 0 118 0v4m-4 8a3 3 0 01-3-3v-4a3 3 0 016 0v4a3 3 0 01-3 3z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-800 mb-1">Member Since</h3>
              <p class="text-gray-600">
                <%= (typeof user !== 'undefined' && user?.createdAt) ? new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : 'Not available' %>
              </p>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>

  <!-- JavaScript -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Search toggle functionality
        const searchToggle = document.getElementById('searchToggle');
        const searchInput = document.getElementById('searchInput');
        
        if (searchToggle && searchInput) {
            searchToggle.addEventListener('click', function(e) {
                e.preventDefault();
                searchInput.classList.toggle('hidden');
                if (!searchInput.classList.contains('hidden')) {
                    searchInput.focus();
                }
            });
            
            // Hide search when clicking outside
            document.addEventListener('click', function(e) {
                if (!searchToggle.contains(e.target) && !searchInput.contains(e.target)) {
                    searchInput.classList.add('hidden');
                }
            });
        }

        // Profile dropdown functionality
        const profileToggle = document.getElementById('profileToggle');
        const profileDropdown = document.getElementById('profileDropdown');
        
        if (profileToggle && profileDropdown) {
            profileToggle.addEventListener('click', function(e) {
                e.preventDefault();
                profileDropdown.classList.toggle('hidden');
            });
            
            // Hide dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (!profileToggle.contains(e.target) && !profileDropdown.contains(e.target)) {
                    profileDropdown.classList.add('hidden');
                }
            });
        }
    });
  </script>

</body>
</html>
