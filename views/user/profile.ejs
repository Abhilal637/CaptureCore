  <link rel="stylesheet" href="/css/user/styles.css"><!-- Add your CSS path here -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white font-sans">
  <!-- Header/Navbar -->
  <%- include('../partial/user/navbar') %>

  <div class="max-w-6xl mx-auto py-10 px-4 flex flex-col md:flex-row gap-10">
    <!-- Sidebar -->
    <aside class="w-full md:w-1/4 mb-8 md:mb-0">
      <div class="bg-white shadow rounded p-6">
        <h2 class="text-xl font-semibold mb-6">Account</h2>
        <ul class="space-y-3">
          <li><a href="#" class="font-bold text-black flex items-center"><span class="mr-2">ðŸ‘¤</span>Profile</a></li>
          <li><a href="#">Password</a></li>
          <li><a href="#">Order</a></li>
          <li><a href="#">Manage Address</a></li>
          <li><a href="#">Wallet</a></li>
        </ul>
        <form action="/logout" method="POST" class="mt-8">
          <button type="submit" class="w-full bg-black text-white py-2 rounded hover:bg-gray-800 transition">LOGOUT</button>
        </form>
      </div>
    </aside>

    <!-- Profile Content -->
    <main class="flex-1">
      <div class="bg-gray-50 shadow rounded p-10 flex flex-col items-center">
        <div class="w-32 h-32 rounded-full bg-gray-200 flex items-center justify-center mb-4">
          <svg class="w-20 h-20 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M5.121 17.804A9 9 0 1112 21a9 9 0 01-6.879-3.196z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <h3 class="text-2xl font-semibold mb-2"><%= user?.name || 'John Doe' %></h3>
        <form class="w-full max-w-sm space-y-4 mt-4">
          <div>
            <label class="block text-gray-700 text-sm mb-1">Email</label>
            <input type="email" value="<%= user?.email || '' %>" class="w-full px-3 py-2 border rounded" readonly>
          </div>
          <div>
            <label class="block text-gray-700 text-sm mb-1">DOB</label>
            <input type="text" value="<%= user?.dob || '' %>" class="w-full px-3 py-2 border rounded" readonly>
          </div>
          <div>
            <label class="block text-gray-700 text-sm mb-1">Password</label>
            <input type="password" value="********" class="w-full px-3 py-2 border rounded" readonly>
          </div>
        </form>
      </div>
    </main>
  </div>

  <!-- Footer -->
  <footer class="bg-white border-t mt-10 py-8">
