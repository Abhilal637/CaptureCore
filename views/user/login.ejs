<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .input-focus:focus {
      border-color: #2563eb;
      box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.2);
    }
    .btn-hover:hover {
      transform: translateY(-1px);
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
    }
    .fade-in {
      animation: fadeIn 0.6s ease-out;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-100 via-white to-gray-200 flex flex-col">

  <!-- Navbar -->
  <%- include('../partial/user/navbar') %>

  <!-- Main Container -->
  <div class="flex-grow flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
      
      <!-- Logo / Icon -->
      <div class="text-center mb-8 fade-in">
        <div class="w-16 h-16 mx-auto flex items-center justify-center bg-gradient-to-tr from-gray-900 to-gray-700 rounded-full shadow-lg mb-6">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 
                     00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900">Welcome Back</h1>
        <p class="text-gray-500 text-sm">Sign in to continue to CaptureCore</p>
      </div>

      <!-- Login Card -->
      <div class="bg-white/70 backdrop-blur-lg rounded-2xl shadow-xl border border-gray-100 p-8 fade-in">
        <form method="POST" action="/login" class="space-y-6">

          <!-- Error -->
          <% if (error) { %>
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-md text-sm">
              <%= error %>
            </div>
          <% } %>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
            <input type="text" name="email" id="email"
              value="<%= locals.body && body.email ? body.email : '' %>"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-400 focus:outline-none input-focus transition-all duration-200 <%= locals.errors && errors.email ? 'border-red-300' : '' %>"
              placeholder="Enter your email">
            <% if (locals.errors && errors.email) { %>
              <p class="text-red-500 text-xs mt-1"><%= errors.email.join(', ') %></p>
            <% } %>
          </div>

          <!-- Password -->
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
            <input type="password" name="password" id="password"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-400 focus:outline-none input-focus transition-all duration-200 <%= locals.errors && errors.password ? 'border-red-300' : '' %>"
              placeholder="Enter your password">
            <% if (locals.errors && errors.password) { %>
              <p class="text-red-500 text-xs mt-1"><%= errors.password.join(', ') %></p>
            <% } %>
          </div>

          <!-- Forgot Password -->
          <div class="flex justify-end">
            <a href="/forgot-password" class="text-sm text-blue-600 hover:underline">Forgot your password?</a>
          </div>

          <!-- Login Button -->
          <button type="submit" 
            class="w-full bg-gradient-to-r from-gray-900 to-gray-700 text-white font-medium py-3 px-4 rounded-lg transition-all duration-200 btn-hover">
            Sign In
          </button>

          <!-- Divider -->
          <div class="flex items-center my-6">
            <div class="flex-grow border-t border-gray-300"></div>
            <span class="px-3 text-gray-500 text-sm">or</span>
            <div class="flex-grow border-t border-gray-300"></div>
          </div>

          <!-- Google Login -->
          <a href="/auth/google" 
            class="w-full flex items-center justify-center gap-3 border border-gray-300 text-gray-700 px-4 py-2.5 rounded-lg hover:bg-gray-50 transition-all duration-200 font-medium">
            <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google" class="w-5 h-5">
            Continue with Google
          </a>

          <!-- Sign Up -->
          <p class="text-center text-sm text-gray-600 mt-4">
            Donâ€™t have an account?
            <a href="/signup" class="text-blue-600 font-medium hover:underline">Sign up</a>
          </p>
        </form>
      </div>
    </div>
  </div>
  <!-- Footer -->
