<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Wallet | CaptureCore</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans text-gray-800">

  <!-- Navbar -->
  <%- include('../partial/user/navbar') %>

  <div class="max-w-6xl mx-auto px-4 py-8 flex flex-col md:flex-row gap-6">

    <!-- Wallet Content -->
    <div class="w-full md:w-3/4 space-y-6">
      <div class="bg-white rounded-lg shadow p-6">
        <h1 class="text-2xl font-bold mb-6 text-gray-700">My Wallet</h1>

        <!-- Current Balance -->
        <div class="bg-gray-50 rounded-lg p-6 mb-6">
          <h2 class="text-xl font-semibold text-gray-700 mb-2">Current Balance</h2>
          <p class="text-3xl font-bold text-green-600">
            ₹<%= (user && typeof user.wallet === 'number') ? user.wallet.toFixed(2) : '0.00' %>
          </p>
          <p class="text-sm text-gray-500 mt-1">This amount can be used during checkout.</p>
        </div>

        <!-- Wallet Transactions -->
        <div class="bg-gray-50 rounded-lg p-6">
          <h2 class="text-lg font-semibold text-gray-700 mb-4">Recent Wallet Activity</h2>

          <% if (walletTransactions && walletTransactions.length > 0) { %>
            <ul class="divide-y divide-gray-200">
              <% walletTransactions.forEach(tx => { %>
                <li class="py-3 flex justify-between items-center">
                  <div>
                    <!-- Order ID -->
                    <% if (tx.orderId) { %>
                      <p class="text-xs text-gray-600">Order: <%= tx.orderId %></p>
                    <% } %>

                    <!-- Description -->
                    <p class="text-xs text-gray-500">
                      <%= tx.description && tx.description.trim() !== '' ? tx.description : 'No description' %>
                    </p>

                    <!-- Date -->
                    <p class="text-xs text-gray-400">
                      <%= tx.createdAt ? new Date(tx.createdAt).toLocaleDateString('en-IN', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                      }) : 'Date unavailable' %>
                    </p>
                  </div>

                  <!-- Amount -->
                  <div class="text-sm font-semibold <%= tx.amount > 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= tx.amount > 0 ? '+' : '' %>₹<%= (typeof tx.amount === 'number') ? tx.amount.toFixed(2) : '0.00' %>
                  </div>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-gray-500 text-sm">No wallet transactions found.</p>
          <% } %>
        </div>
      </div>
    </div>

  </div>
</body>
</html>
  