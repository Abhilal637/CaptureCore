<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Email | CaptureCore</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 font-sans min-h-screen">

    <%- include('../partial/user/navbar') %>

  <%- include('../partial/user/profilesidebar', { currentPage: 'edit-email' }) %>

  <!-- Main Content -->
  <main class="flex-1">
    <div class="bg-gray-50 shadow rounded p-10">
      <h2 class="text-2xl font-bold mb-6 text-center">Update Email</h2>
      
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-red-100 text-red-700 p-3 rounded mb-4 text-center"><%= error %></div>
      <% } %>

      <form action="/email/send-otp" method="POST" class="space-y-6 max-w-md mx-auto" id="editEmailForm">
        <div>
          <label class="block text-gray-700 mb-2" for="newEmail">New Email Address</label>
          <input
            type="email"
            id="newEmail"
            name="newEmail"
            placeholder="Enter new email"
            class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-400 focus:outline-none"
          />
          <p class="field-error mt-1 text-sm text-red-600"></p>
        </div>

        <div class="flex justify-center">
          <button
            type="submit"
            class="bg-black text-white px-6 py-2 rounded hover:bg-gray-800 transition"
          >
            Send OTP
          </button>
        </div>
      <script src="/js/inline-validator.js"></script>
      <script>
        attachInlineValidation(document.getElementById('editEmailForm'));
      </script>
      </form>
    </div>
  </main>

</body>
</html>
