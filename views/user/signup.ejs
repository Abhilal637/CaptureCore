<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Signup | CaptureCore</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/js/inline-validator.js"></script>
  
  <style>
    body { font-family: 'Helvetica Neue', sans-serif; }
    .input-focus:focus {
      border-color: #2563eb;
      box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.2);
    }
    .btn-hover:hover {
      transform: translateY(-1px);
      box-shadow: 0 6px 16px rgba(0,0,0,0.2);
    }
    .fade-in { animation: fadeIn 0.6s ease-out; }
    @keyframes fadeIn {
      from { opacity:0; transform:translateY(20px); }
      to { opacity:1; transform:translateY(0); }
    }
  </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-100 via-white to-gray-200 flex flex-col text-[#333] text-sm">
  <%- include('../partial/user/navbar') %>

  <!-- Header -->
  <header class="bg-transparent py-12 text-center fade-in">
    <h1 class="text-3xl font-bold text-gray-900">Create Account</h1>
    <p class="text-xs text-gray-500 mt-1">Join CaptureCore today</p>
  </header>

  <!-- Signup Form -->
  <main class="flex-grow flex items-center justify-center px-4 pb-16 fade-in">
    <div class="w-full max-w-md bg-white/70 backdrop-blur-lg p-8 sm:p-10 rounded-2xl shadow-xl border border-gray-100">
      
      <% if (error) { %>
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-md text-sm mb-4">
          <%= error %>
        </div>
      <% } %>

      <form action="/signup" method="POST" class="space-y-5" id="signupForm" data-required="true">
        <div>
          <input type="text" name="name" placeholder="Full Name" 
            value="<%= locals.body && body.name ? body.name : '' %>"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm placeholder-gray-400 focus:outline-none input-focus transition-all" data-required />
        </div>
        <div>
          <input type="email" name="email" placeholder="Email Address" 
            value="<%= locals.body && body.email ? body.email : '' %>"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm placeholder-gray-400 focus:outline-none input-focus transition-all" data-required />
        </div>
        <div>
          <input type="tel" name="phone" placeholder="Phone Number" 
            value="<%= locals.body && body.phone ? body.phone : '' %>"
            maxlength="10"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm placeholder-gray-400 focus:outline-none input-focus transition-all" data-required />
        </div>
        <div>
          <input type="password" name="password" placeholder="Password (min 8 chars)"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm placeholder-gray-400 focus:outline-none input-focus transition-all" data-required minlength="8" />
        </div>
        <div>
          <input type="password" name="confirm_password" placeholder="Confirm Password"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm placeholder-gray-400 focus:outline-none input-focus transition-all" data-required />
        </div>
        <div>
          <button type="submit"
            class="w-full bg-gradient-to-r from-gray-900 to-gray-700 text-white font-medium py-3 px-4 rounded-lg transition-all duration-200 btn-hover">
            Sign Up
          </button>
        </div>
        <p class="text-center text-sm text-gray-600 mt-2">
          Already have an account?
          <a href="/login" class="text-blue-600 font-medium hover:underline ml-1">Login</a>
        </p>
      </form>

      <!-- SSO Signup Buttons -->
      <div class="mt-8 space-y-3">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Or sign up with</span>
          </div>
        </div>
        
        <a href="/auth/google" 
          class="flex items-center justify-center gap-3 w-full border border-gray-300 px-4 py-2.5 rounded-lg hover:bg-gray-50 transition-all duration-200 font-medium text-gray-700">
          <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google" class="w-5 h-5">
          Continue with Google
        </a>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-white border-t border-gray-200 mt-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6 text-xs text-gray-600">
      <div>
        <h4 class="text-black font-medium mb-2">CaptureCore</h4>
        <p>Mail: capturecore@info.com</p>
        <p>Address: 123 Main St, City, Country</p>
        <div class="flex space-x-3 mt-3">
          <a href="#" class="hover:text-black">FB</a>
          <a href="#" class="hover:text-black">TW</a>
          <a href="#" class="hover:text-black">IN</a>
        </div>
      </div>
      <div>
        <h4 class="text-black font-medium mb-2">Quick Links</h4>
        <ul class="space-y-1">
          <li><a href="#" class="hover:text-black">Home</a></li>
          <li><a href="#" class="hover:text-black">Shop</a></li>
          <li><a href="#" class="hover:text-black">About</a></li>
          <li><a href="#" class="hover:text-black">Contact</a></li>
        </ul>
      </div>
      <div>
        <h4 class="text-black font-medium mb-2">Help & Info</h4>
        <ul class="space-y-1">
          <li><a href="#" class="hover:text-black">How to Order</a></li>
          <li><a href="#" class="hover:text-black">Shipping & Delivery</a></li>
          <li><a href="#" class="hover:text-black">Contact Us</a></li>
          <li><a href="#" class="hover:text-black">FAQs</a></li>
        </ul>
      </div>
      <div>
        <h4 class="text-black font-medium mb-2">Contact Us</h4>
        <p>123 Main St, City</p>
        <p>capturecore@info.com</p>
        <p>+123 456 7890</p>
      </div>
    </div>
    <div class="border-t border-gray-200 py-4 text-center text-[11px] text-gray-500">
      &copy; 2024 CaptureCore. Design by <a href="#" class="underline">TemplateCreator</a>
    </div>
  </footer>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const signupForm = document.getElementById('signupForm');
      if (signupForm && !signupForm.hasAttribute('data-skip-inline')) {
        window.attachInlineValidation(signupForm);
      }
      const phoneInput = document.querySelector('input[name="phone"]');
      if (phoneInput) {
        phoneInput.addEventListener('input', function(e) {
          let value = e.target.value.replace(/\D/g, '');
          if (value.length > 10) value = value.slice(0, 10);
          e.target.value = value;
        });
      }
    });
  </script>
</body>
</html>
