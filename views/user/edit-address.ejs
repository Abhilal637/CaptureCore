<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Address | CaptureCore</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  <script src="https://cdn.tailwindcss.com"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const phoneInput = document.querySelector('input[name="phone"]');
      const pincodeInput = document.querySelector('input[name="pincode"]');
      
      if (phoneInput) {
        phoneInput.addEventListener('input', function(e) {
          // Remove any non-digit characters
          let value = e.target.value.replace(/\D/g, '');
          
          // Limit to 10 digits
          if (value.length > 10) {
            value = value.slice(0, 10);
          }
          
          e.target.value = value;
        });
      }
      
      if (pincodeInput) {
        pincodeInput.addEventListener('input', function(e) {
          // Remove any non-digit characters
          let value = e.target.value.replace(/\D/g, '');
          
          // Limit to 6 digits
          if (value.length > 6) {
            value = value.slice(0, 6);
          }
          
          e.target.value = value;
        });
      }
    });
  </script>
</head>
<body class="bg-white font-sans">
  <%- include('../partial/user/navbar') %>

  <%- include('../partial/user/profilesidebar') %>

  <!-- Profile Content -->
  <main class="flex-1">
    <div class="bg-gray-50 shadow rounded p-10">
      <!-- Header -->
      <div class="flex items-center mb-6">
        <a href="/addresses" class="text-indigo-600 hover:text-indigo-900 mr-4">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        </a>
        <h1 class="text-2xl font-semibold text-gray-900">Edit Address</h1>
      </div>

      <!-- Form -->
      <form method="POST" action="/addresses/edit/<%= address._id %>" class="bg-white rounded-lg p-6 shadow-sm border border-gray-200" id="editAddressFormServer">
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md">
            <%= error %>
          </div>
        <% } %>

        <div class="space-y-6">
          <!-- Full Name -->
          <div>
            <label for="fullName" class="block text-sm font-medium text-gray-700 mb-2">
              Full Name
            </label>
            <% if (locals.errors && errors.fullName) { %>
              <div class="text-red-500 text-xs mb-1">
                <% errors.fullName.forEach(error => { %>
                  <p><%= error %></p>
                <% }) %>
              </div>
            <% } %>
            <input 
              type="text" 
              id="fullName" 
              name="fullName" 
              
              value="<%= locals.body && body.fullName ? body.fullName : address.fullName %>"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 <%= locals.errors && errors.fullName ? 'border-red-500' : '' %>"
              placeholder="Enter your full name"
            >
          </div>

          <!-- Phone -->
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
              Phone Number
            </label>
            <% if (locals.errors && errors.phone) { %>
              <div class="text-red-500 text-xs mb-1">
                <% errors.phone.forEach(error => { %>
                  <p><%= error %></p>
                <% }) %>
              </div>
            <% } %>
            <input 
              type="tel" 
              id="phone" 
              name="phone" 
              
              maxlength="10"
              value="<%= locals.body && body.phone ? body.phone : address.phone %>"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 <%= locals.errors && errors.phone ? 'border-red-500' : '' %>"
              placeholder="Enter your phone number"
            >
          </div>

          <!-- Address Line -->
          <div>
            <label for="addressLine" class="block text-sm font-medium text-gray-700 mb-2">
              Address Line
            </label>
            <% if (locals.errors && errors.addressLine) { %>
              <div class="text-red-500 text-xs mb-1">
                <% errors.addressLine.forEach(error => { %>
                  <p><%= error %></p>
                <% }) %>
              </div>
            <% } %>
            <textarea 
              id="addressLine" 
              name="addressLine" 
              
              rows="3"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 <%= locals.errors && errors.addressLine ? 'border-red-500' : '' %>"
              placeholder="Enter your street address, apartment, suite, etc."
            ><%= locals.body && body.addressLine ? body.addressLine : address.addressLine %></textarea>
          </div>

          <!-- City and State -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="city" class="block text-sm font-medium text-gray-700 mb-2">
                City
              </label>
              <% if (locals.errors && errors.city) { %>
                <div class="text-red-500 text-xs mb-1">
                  <% errors.city.forEach(error => { %>
                    <p><%= error %></p>
                  <% }) %>
                </div>
              <% } %>
              <input 
                type="text" 
                id="city" 
                name="city" 
                
                value="<%= locals.body && body.city ? body.city : address.city %>"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 <%= locals.errors && errors.city ? 'border-red-500' : '' %>"
                placeholder="Enter city"
              >
            </div>
            <div>
              <label for="state" class="block text-sm font-medium text-gray-700 mb-2">
                State
              </label>
              <% if (locals.errors && errors.state) { %>
                <div class="text-red-500 text-xs mb-1">
                  <% errors.state.forEach(error => { %>
                    <p><%= error %></p>
                  <% }) %>
                </div>
              <% } %>
              <input 
                type="text" 
                id="state" 
                name="state" 
                
                value="<%= locals.body && body.state ? body.state : address.state %>"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 <%= locals.errors && errors.state ? 'border-red-500' : '' %>"
                placeholder="Enter state"
              >
            </div>
          </div>

          <!-- Pincode and Country -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="pincode" class="block text-sm font-medium text-gray-700 mb-2">
                Pincode
              </label>
              <% if (locals.errors && errors.pincode) { %>
                <div class="text-red-500 text-xs mb-1">
                  <% errors.pincode.forEach(error => { %>
                    <p><%= error %></p>
                  <% }) %>
                </div>
              <% } %>
              <input 
                type="text" 
                id="pincode" 
                name="pincode" 
                
                maxlength="6"
                value="<%= locals.body && body.pincode ? body.pincode : address.pincode %>"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 <%= locals.errors && errors.pincode ? 'border-red-500' : '' %>"
                placeholder="Enter pincode"
              >
            </div>
            <div>
              <label for="country" class="block text-sm font-medium text-gray-700 mb-2">
                Country
              </label>
              <input 
                type="text" 
                id="country" 
                name="country" 
                value="<%= address.country %>"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="Enter country"
              >
            </div>
          </div>

          <!-- Default Address Checkbox -->
          <div class="flex items-center">
            <input 
              type="checkbox" 
              id="isDefault" 
              name="isDefault" 
              value="true"
              <%= address.isDefault ? 'checked' : '' %>
              class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
            >
            <label for="isDefault" class="ml-2 block text-sm text-gray-900">
              Set as default address
            </label>
          </div>
        </div>

        <!-- Submit Buttons -->
        <div class="flex justify-end space-x-3 mt-8 pt-6 border-t border-gray-200">
          <a 
            href="/addresses" 
            class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          >
            Cancel
          </a>
          <button 
            type="submit" 
            class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          >
            Update Address
          </button>
        </div>
      </form>
      <script src="/js/inline-validator.js"></script>
      <script>
        attachInlineValidation(document.getElementById('editAddressFormServer'));
      </script>
    </div>
  </main>
</body>
</html> 