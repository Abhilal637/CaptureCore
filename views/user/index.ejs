<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CaptureCore - Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-gray-50">
    <%- include('../partial/user/navbar') %>

    <!-- Hero Section -->
    <section class="bg-gray-100 py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <div>
                    <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
                        YOUR PRODUCTS<br>
                        ARE GREAT
                    </h1>
                   <a href="/shop">
    <button class="bg-black text-white px-8 py-3 rounded-md hover:bg-gray-800 transition-colors">
        SHOP NOW
    </button>
</a>
                </div>
                <div class="flex justify-center">
                    <img src="https://i.ibb.co/7t2MtCg1/download-15.jpg" alt="CaptureCore Product" class="rounded-lg shadow-xl max-h-96">
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-4 gap-8">
                <div class="text-center p-6 rounded-lg hover:bg-gray-50 transition-colors">
                    <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                        </svg>
                    </div>
                    <h3 class="font-semibold text-gray-900 mb-2">Free shipping</h3>
                    <p class="text-sm text-gray-600">On orders over $100</p>
                </div>
                <div class="text-center p-6 rounded-lg hover:bg-gray-50 transition-colors">
                    <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <h3 class="font-semibold text-gray-900 mb-2">Quality products</h3>
                    <p class="text-sm text-gray-600">Professional grade equipment</p>
                </div>
                <div class="text-center p-6 rounded-lg hover:bg-gray-50 transition-colors">
                    <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                        </svg>
                    </div>
                    <h3 class="font-semibold text-gray-900 mb-2">Secure payment</h3>
                    <p class="text-sm text-gray-600">Safe & secure checkout</p>
                </div>
                <div class="text-center p-6 rounded-lg hover:bg-gray-50 transition-colors">
                    <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <h3 class="font-semibold text-gray-900 mb-2">24/7 Support</h3>
                    <p class="text-sm text-gray-600">Expert customer service</p>
                </div>
            </div>
        </div>
    </section>

  <!-- Products Section -->
<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-8">PRODUCTS</h2>
    <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-6">

      <% if (featuredProducts && featuredProducts.length > 0) { %>
        <% featuredProducts.forEach(product => { %>
          <a href="/product/<%= product._id %>" class="block bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
            <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="w-full h-48 object-contain p-4">
            <div class="p-4">
              <h3 class="font-medium text-gray-900"><%= product.name %></h3>
              <p class="text-gray-600 text-sm mt-1">â‚¹<%= product.price.toFixed(2) %></p>
              <% if (product.category) { %>
                <p class="text-xs text-gray-500 mt-1"><%= product.category.name %></p>
              <% } %>
            </div>
          </a>
        <% }) %>
      <% } else { %>
        <!-- Fallback products when no products are available -->
        <div class="col-span-full text-center py-8">
          <p class="text-gray-500">No products available at the moment.</p>
          <a href="/shop" class="mt-4 inline-block bg-black text-white px-6 py-2 rounded hover:bg-gray-800">Browse All Products</a>
        </div>
      <% } %>

    </div>
  </div>
</section>

<!-- Updated Banner to Match Hero -->
<section class="py-16 bg-gray-100 text-gray-900">  <!-- Changed to gray-100 and text to gray-900 -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-4">NEW YEAR SALE</h2>
        <p class="text-xl mb-6">Up to 40% off on selected items</p>
        <button class="bg-black text-white px-8 py-3 rounded-md hover:bg-gray-800 transition-colors">
            SHOP SALE ITEMS
        </button>
    </div>
</section>

    <!-- Gallery Section -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-8">GALLERY</h2>
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4">
                <div class="relative group overflow-hidden rounded-lg">
                    <img src="https://unsplash.com/photos/black-and-silver-vintage-camera-soLEw77Napo?utm_content=creditShareLink&utm_medium=referral&utm_source=unsplash" 
                        alt="Gallery 1" class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-105">
                    <div class="absolute inset-0 bg-black bg-opacity-20 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                        <span class="text-white font-medium">View</span>
                    </div>
                </div>
                <div class="relative group overflow-hidden rounded-lg">
                    <img src="https://images.unsplash.com/photo-1601976284894-b64171b6bf17?w=300&h=300&fit=crop" 
                        alt="Gallery 2" class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-105">
                    <div class="absolute inset-0 bg-black bg-opacity-20 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                        <span class="text-white font-medium">View</span>
                    </div>
                </div>
                <div class="relative group overflow-hidden rounded-lg">
                    <img src="https://images.unsplash.com/photo-1606983340126-99ab4feaa64a?w=300&h=300&fit=crop" 
                        alt="Gallery 3" class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-105">
                    <div class="absolute inset-0 bg-black bg-opacity-20 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                        <span class="text-white font-medium">View</span>
                    </div>
                </div>
                <div class="relative group overflow-hidden rounded-lg">
                    <img src="https://images.unsplash.com/photo-1502920917128-1aa500764cbd?w=300&h=300&fit=crop" 
                        alt="Gallery 4" class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-105">
                    <div class="absolute inset-0 bg-black bg-opacity-20 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                        <span class="text-white font-medium">View</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="py-16 bg-gray-900 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-2xl font-bold mb-4">SUBSCRIBE TO OUR NEWSLETTER</h2>
            <p class="text-gray-300 mb-8">Stay updated with our latest products and offers</p>
            <div class="max-w-md mx-auto flex">
                <input type="email" placeholder="Enter your email" 
                    class="flex-1 px-4 py-3 rounded-l-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <button class="bg-blue-600 px-6 py-3 rounded-r-lg hover:bg-blue-700 transition-colors">
                    Subscribe
                </button>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-4 gap-8">
                <div>
                    <h3 class="font-semibold text-xl mb-4">CaptureCore</h3>
                    <p class="text-gray-400 text-sm">
                        Minimalist camera gear hub for professionals & creators.
                    </p>
                </div>
                <div>
                    <h4 class="font-medium mb-4">Quick Links</h4>
                    <ul class="space-y-2 text-sm text-gray-400">
                        <li><a href="#" class="hover:text-white transition-colors">Home</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">Shop</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">About</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-medium mb-4">Categories</h4>
                    <ul class="space-y-2 text-sm text-gray-400">
                        <li><a href="#" class="hover:text-white transition-colors">Cameras</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">Lenses</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">Accessories</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">Lighting</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-medium mb-4">Support</h4>
                    <ul class="space-y-2 text-sm text-gray-400">
                        <li><a href="#" class="hover:text-white transition-colors">FAQ</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">Shipping</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">Returns</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">Contact Support</a></li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-gray-800 mt-8 pt-8 text-center text-sm text-gray-400">
                <p>&copy; <%= new Date().getFullYear() %> CaptureCore. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>